<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <%= t("placeholder.settings.unconfirmed_email") %><%= resource.unconfirmed_email %>
    <% end %>

  <%= f.input :first_name, placeholder: t("placeholder.settings.first_name") %>

  <%= f.input :last_name, placeholder: t("placeholder.settings.last_name") %>

  <%= f.input :email, placeholder: t("placeholder.settings.email") %>

    <%= f.input :date_of_birth, as: :date, wrapper: false, order: [:year, :month, :day], prompt: {year: t('date.year'), month: t('date.month'), day: t('date.day')},
                start_year: Date.current.year, end_year: 1920, use_month_names: t(:month_names, scope: :date),
                required: false, label: false, input_html: { class: "date_of_birth" }  %>

  <%= f.input :password, autocomplete: "off", required: false, placeholder: t("placeholder.settings.password") %>

  <%= f.input :password_confirmation, autocomplete: "off", required: false, placeholder: t("placeholder.settings.password_confirmation") %>

  <%= f.input :locale, collection: @locales.map { |k,v| [v,k] }, selected: current_user.locale %>

  <%= f.input :current_password, autocomplete: "off", required: true, placeholder: t("placeholder.settings.current_password") %>


  <div><%= f.submit "Update" %></div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
